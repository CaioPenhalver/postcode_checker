<!DOCTYPE html>
<html>
  <head>
    <title>PostcodeChecker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
    <div class="row">
      <div class="col s12 m3 l2"> <!-- Note that "m4 l3" was added -->
        <div class="row">
          <div class="collection">
              <%= link_to('Search by Postcode', whitelist_index_path, class: 'collection-item')%>
        </div>
        </div>
        <div class="row">
          <a>District</a>
          <div class="collection">
              <%= link_to('Register', new_district_path, class: 'collection-item')%>
              <%= link_to('Whitelist', districts_path, class: 'collection-item')%>
        </div>
        </div>
        <div class="row">
          <a>Postcode</a>
          <div class="collection">
              <%= link_to('Register', new_postcode_path, class: 'collection-item')%>
              <%= link_to('Whitelist', postcodes_path, class: 'collection-item')%>
          </div>
        </div>
      </div>

      <div class="col s12 m8 l9">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
